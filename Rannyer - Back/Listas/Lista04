import java.util.ArrayList;
import java.util.Random;
import java.util.Scanner;

public class ExercicioLista04 {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ArrayList<String> alunos = new ArrayList<>();

        System.out.println("Digite os nomes dos alunos e FIM para encerrar:");

            while (true) {
                String nome = scanner.nextLine();

                if (nome.equalsIgnoreCase("fim")) {
                    break;
                }
                alunos.add(nome);
            }

            if (alunos.isEmpty()) {
                System.out.println("Nenhum aluno foi cadastrado.");
            } else {
                Random random = new Random();
                int sorteado = random.nextInt(alunos.size());

                System.out.println("Aluno sorteado: " + alunos.get(sorteado));
            }
            scanner.close();
    }
}
