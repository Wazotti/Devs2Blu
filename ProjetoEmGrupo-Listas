import java.util.ArrayList;
import java.util.Scanner;

public class CadastroProdutos {
    public static void main(String[] args) {
        ArrayList<String> listaProdutos = new ArrayList<>();
        ArrayList<Double> listaPrecos = new ArrayList<>();
        Scanner scanner = new Scanner(System.in);

        while (true) {
            System.out.println("\nğŸ’„ğŸ’„ğŸ’„ Menu de Compras ğŸ’„ğŸ’„ğŸ’„");
            System.out.println("1 - Cadastrar Produto");
            System.out.println("2 - Listar Todos os Produtos");
            System.out.println("3 - Mostrar Produto(s) Mais Caro(s)");
            System.out.println("4 - Exibir Valor Total");
            System.out.println("5 - Listar Produtos Acima da MÃ©dia");
            System.out.println("6 - Atualizar PreÃ§o de um Produto");
            System.out.println("7 - Remover Produto pelo Nome");
            System.out.println("8 - Calcular MÃ©dia de PreÃ§os");
            System.out.println("0 - Sair");
            System.out.print("Escolha uma opÃ§Ã£o: ");

            int opcao;
            if (scanner.hasNextInt()) {
                opcao = scanner.nextInt();
                scanner.nextLine();
            } else {
                System.out.println("OpÃ§Ã£o invÃ¡lida. Digite um nÃºmero.ğŸ˜¥");
                scanner.nextLine();
                continue;
            }

            switch (opcao) {
                case 1:
                    System.out.print("Digite o nome do produto: ");
                    String nome = scanner.nextLine();

                    if (listaProdutos.contains(nome)) {
                        System.out.println("Produto jÃ¡ cadastrado. Nome duplicado nÃ£o permitido.ğŸ˜¥");
                    } else {
                        System.out.print("Digite o preÃ§o do produto: ");
                        if (scanner.hasNextDouble()) {
                            double preco = scanner.nextDouble();
                            scanner.nextLine();
                            listaProdutos.add(nome);
                            listaPrecos.add(preco);
                            System.out.println("Produto cadastrado com sucesso!ğŸ˜");
                        } else {
                            System.out.println("PreÃ§o invÃ¡lido. Produto nÃ£o cadastrado.ğŸ˜¥");
                            scanner.nextLine();
                        }
                    }
                    break;

                case 2:
                    if (listaProdutos.isEmpty()) {
                        System.out.println("Nenhum produto cadastrado.ğŸ˜¥");
                    } else {
                        System.out.println("Produtos cadastrados:");
                        for (int i = 0; i < listaProdutos.size(); i++) {
                            System.out.println(listaProdutos.get(i) + " - R$ " + listaPrecos.get(i));
                        }
                    }
                    break;

                case 3:
                    if (listaProdutos.isEmpty()) {
                        System.out.println("Nenhum produto cadastrado.ğŸ˜¥");
                    } else {
                        double maiorPreco = Double.MIN_VALUE;
                        for (double preco : listaPrecos) {
                            if (preco > maiorPreco) {
                                maiorPreco = preco;
                            }
                        }
                        System.out.println("Produto(s) mais caro(s) - R$ " + maiorPreco + ":");
                        for (int i = 0; i < listaPrecos.size(); i++) {
                            if (listaPrecos.get(i) == maiorPreco) {
                                System.out.println(listaProdutos.get(i));
                            }
                        }
                    }
                    break;

                case 4:
                    if (listaPrecos.isEmpty()) {
                        System.out.println("Nenhum produto cadastrado.ğŸ˜¥");
                    } else {
                        double soma = 0;
                        for (double preco : listaPrecos) {
                            soma += preco;
                        }
                        System.out.println("Total em dinheiro de todos os produtos: R$ " + soma + " ğŸ¤‘");
                    }
                    break;

                case 5:
                    if (listaPrecos.isEmpty()) {
                        System.out.println("Nenhum produto cadastrado.ğŸ˜¥");
                    } else {
                        double soma = 0;
                        for (double preco : listaPrecos) {
                            soma += preco;
                        }
                        double media = soma / listaPrecos.size();
                        System.out.println("Produtos com preÃ§o acima da mÃ©dia (R$ " + media + "):");
                        boolean encontrou = false;
                        for (int i = 0; i < listaPrecos.size(); i++) {
                            if (listaPrecos.get(i) > media) {
                                System.out.println(listaProdutos.get(i) + " - R$ " + listaPrecos.get(i));
                                encontrou = true;
                            }
                        }
                        if (!encontrou) {
                            System.out.println("Nenhum produto acima da mÃ©dia.ğŸ¤‘");
                        }
                    }
                    break;

                case 6:
                    System.out.print("Digite o nome do produto para atualizar o preÃ§o: ");
                    String nomeAtualizar = scanner.nextLine();
                    int indexAtualizar = listaProdutos.indexOf(nomeAtualizar);
                    if (indexAtualizar != -1) {
                        System.out.print("Digite o novo preÃ§o: ");
                        if (scanner.hasNextDouble()) {
                            double novoPreco = scanner.nextDouble();
                            scanner.nextLine();
                            listaPrecos.set(indexAtualizar, novoPreco);
                            System.out.println("PreÃ§o atualizado com sucesso!ğŸ˜");
                        } else {
                            System.out.println("PreÃ§o invÃ¡lido.ğŸ˜¥");
                            scanner.nextLine();
                        }
                    } else {
                        System.out.println("Produto nÃ£o encontrado.ğŸ˜¥");
                    }
                    break;

                case 7:
                    System.out.print("Digite o nome do produto para remover: ");
                    String nomeRemover = scanner.nextLine();
                    int indexRemover = listaProdutos.indexOf(nomeRemover);
                    if (indexRemover != -1) {
                        listaProdutos.remove(indexRemover);
                        listaPrecos.remove(indexRemover);
                        System.out.println("Produto removido com sucesso!ğŸ˜");
                    } else {
                        System.out.println("Produto nÃ£o encontrado.ğŸ˜¥");
                    }
                    break;

                case 8:
                    if (listaPrecos.isEmpty()) {
                        System.out.println("Nenhum produto cadastrado para calcular a mÃ©dia.ğŸ˜¥");
                    } else {
                        double soma = 0;
                        for (double preco : listaPrecos) {
                            soma += preco;
                        }
                        double media = soma / listaPrecos.size();
                        System.out.printf("A mÃ©dia de preÃ§os dos produtos Ã©: R$ %.2f \n", media);
                    }
                    break;

                case 0:
                    System.out.println("Programa encerrado.ğŸ˜­ğŸ’”");
                    scanner.close();
                    return;

                default:
                    System.out.println("OpÃ§Ã£o invÃ¡lida. Tente novamente.ğŸ˜¥");
            }
        }
    }
}
